@{
    ViewBag.Title = "Bootstrap Mvc helpers";
}
@model IEnumerable<Bootstrap.Mvc.Demo.Customer>
<h2>Customers</h2>
<p>Simple table example</p>
@(Html.Bootstrap()
    .Grid(@Model)
    .SetId("customers")
    .SetTableType(GridType.condensed | GridType.striped | GridType.hoverEffect)
    .Columns(cols =>
    {
        cols.Add("CustomerId").SetTitle("ID");
        cols.Add("CompanyName").SetTitle("Company");
        cols.Add("ContactName").SetTitle("Contact");
        cols.Add("Address");
    }
    ))
